{% extends "layout.html.twig" %}

{% block title 'Admin articles' %}

{% block content %}
    <h2>Articles</h2>
    <p><a href="{{ path('admin_article_edit') }}">Ajouter un article</a></p>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Résumé</th>
            <th>Rubrique</th>
            <th width="200px"></th>

        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.shortContent }}</td>
                <td>{{ article.categoryName }}</td>
                <td>
                    <a
                        href="{{ path('admin_article_edit', {id: article.id}) }}"
                        class="btn btn-primary">
                        Modifier
                    </a>
                    <a
                        href="{{ path('admin_article_delete', {id: article.id}) }}"
                        class="btn btn-danger">
                        Supprimer
                    </a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td coldspan="4" align="center">Aucun résultat</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
